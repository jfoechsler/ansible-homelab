# dnsmasq configuration with cnames for containers using {{ ansible_host }} as nginx proxy
# Template to be rendered on nginx container hosts.
{% for ctr in containers %}
{% if ctr.http_port_idx is defined %}
{% if ctr.http_proxy == item.0.name %}
cname={{ ctr.name }}{{ environment_suffix }}.{{ domain }},{{ dns_host }}.{{ domain }}
{% endif %}
{% endif %}
{% endfor %}
