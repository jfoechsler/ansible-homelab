# {{ ansible_managed }}

server {
    listen       80;
    server_name pkgs.{{ domain }};
    root /usr/share/nginx/html;
    location / {
            allow all;
            # set to off in attempt to fix serving old virtiofs contents
            sendfile off;
            sendfile_max_chunk 1m;
            autoindex on;
            autoindex_exact_size off;
            autoindex_format html;
            autoindex_localtime on;
    }
